params {
    withName: ".*:VCF_PCA_PLINK:BCFTOOLS_NORM_VCF" {
        ext.args = '-m-any --check-ref w'
    }

    withName: ".*:VCF_PCA_PLINK:BCFTOOLS_ANNOTATE" {
        ext.args = "-x ID -I +'%CHROM:%POS:%REF:%ALT'"
    }

    withName: ".*:VCF_PCA_PLINK:BCFTOOLS_NORM_BCF" {
        ext.args = '-Ob --rm-dup both'
    }

    withName: ".*:VCF_PCA_PLINK:PLINK_BCF" {
        ext.args = '--noweb --keep-allele-order --vcf-idspace-to _ --const-fid --allow-extra-chr 0 --split-x b37 no-fail --make-bed'
    }

    withName: ".*:VCF_PCA_PLINK:PLINK_INDEP" {
        ext.args = '--maf 0.10 --noweb'

    withName: ".*:VCF_PCA_PLINK:PLINK_EXTRACT" {
        ext.prefix = {"${bed.baseName}_extracted"}
        ext.args = '--make-bed --noweb'
    }
}
